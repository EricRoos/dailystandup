<%= render layout: 'layouts/team', locals: { side_bar_option: 'team-members', title: 'Team Members' } do %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @team.team_members.each do |team_member| %>
        <tr>
          <td><%= team_member.user.full_name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Team Member', new_team_team_member_path(@team) %>
<% end %>
