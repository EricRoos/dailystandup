<% user = activity.actor %>
<div class="mx-auto px-4 py-4 shadow-md rounded-lg mb-4">
  <div class="py-2 flex flex-row items-center justify-between">
    <div class="flex flex-row items-center">
      <a href="#" class="flex flex-row items-center focus:outline-none focus:shadow-outline rounded-lg">
        <img class="rounded-full h-16 w-16 object-cover" src="<%= user.gravatar_url %>" alt="">
      <h4 class="ml-2"><%= user.full_name %></h4>
      </a>
    </div>
  </div>
  <div class="flex flex-row items-center">
    <p class="text-xs font-semibold text-gray-500"><%= time_ago_in_words(activity.created_at) %></p>
  </div>
  <div class="mt-2">
    <%= yield %>
  </div>
</div>
